.input-field
	position relative
	margin-bottom 1.5rem
	width 100%
	> label
		font-size 14px
		color grey-2
	.material-icons
		position absolute
		bottom .55rem
		right 1rem
	> ul
		padding .7rem 0
		> li
			display inline-block

input
	width 100%
	background none
	font-family 'Source Sans Pro', sans-serif
	font-size 16px
	color dark-color
	border none
	border-bottom 1px solid primary-color
	padding .7rem 1rem
	box-sizing border-box
	&[type=radio]
		width auto
		display none
		+ label
			display inline-flex
			align-items center
			margin 0 1rem 0 0
			position relative
			&:before
				content ''
				width 16px
				height 16px
				display inline-block
				margin 0 .5rem 0 0
				border-radius 50%
				border 2px solid primary-color
				font-size 16px
			&:after
				content ''
				background primary-color
				width 0
				height 0
				transition .3s
				position absolute
				top 50%
				left 10px
				transform translate(-50%,-50%)
				border-radius 50%
		&:checked
			+ label
				&:after
					width 14px
					height 14px
	&[type=checkbox]
		width auto
		display none
		+ label
			display inline-flex
			align-items center
			margin 0 1rem 0 0
			position relative
			cursor pointer
			&:before
				content ''
				width 16px
				height 16px
				display inline-block
				margin 0 .5rem 0 0
				border-radius 4px
				border 2px solid primary-color
				font-size 16px
				transition .3s
			&:after
				content ''
				width 0
				height 0
				transition .3s
				position absolute
				top 50%
				left 10px
				transform translate(-50%,-50%) rotate(0deg)
				border-left 2px solid light-color
				border-bottom 2px solid light-color
				opacity 0
		&:checked
			+ label
				&:before
					background primary-color
				&:after
					width 11px
					transform translate(-50%,-75%) rotate(-45deg)
					height 5px
					opacity 1

textarea.materialize-textarea
	font-family 'Source Sans Pro', sans-serif
	background-color transparent
	border none
	border-bottom 1px solid primary-color
	border-radius 0
	outline none
	min-height 3rem
	width 100%
	font-size 16px
	padding .7rem 0
	box-shadow none
	box-sizing content-box
	transition all .3s
	overflow hidden

.select-wrapper
	position relative
	select
		display none
	.caret
		color primary-color
		position absolute
		font-size 12px
		top 50%
		right .5rem
		transform translate(0,-50%)
	.dropdown-content
		display none
		z-index 10
		> li
			display block
			background primary-color
			color light-color
			font-size 16px
			padding .7rem 1rem
			cursor pointer
			&:nth-child(2n+1)
				background lightness(primary-color, 40)
			&:hover
				background lightness(primary-color, 50)
			&.disabled
				height 20px
				background none

// Switch
.switch
.switch *
	-webkit-user-select: none;
	-moz-user-select: none;
	-khtml-user-select: none;
	-ms-user-select: none;

.switch
	padding 1rem 1rem .3rem
	label
		cursor: pointer;
		input[type=checkbox]
			opacity: 0;
			width: 0;
			height: 0;
			&:checked + .lever
				background-color: rgba(primary-color, .5);
				&:after
					background-color: primary-color;

.switch
	label
		.lever
			content: "";
			display: inline-block;
			position: relative;
			width: 40px;
			height: 15px;
			background-color: rgba(grey, .5);
			border-radius: 15px;
			margin-right: 10px;
			transition: background 0.3s ease;
			vertical-align: middle;
			margin: 0 16px;
			&:after
				content: "";
				position: absolute;
				display: inline-block;
				width: 21px;
				height: 21px;
				background-color: grey;
				border-radius: 21px;
				left: -5px;
				top: -3px;
				transition: left 0.3s ease, background .3s ease, box-shadow 0.1s ease;

// Switch active style
input[type=checkbox]:checked:not(:disabled) ~ .lever:active:after
	box-shadow: 0 1px 3px 1px rgba(0,0,0,.4), 0 0 0 15px transparentize(primary-color, .9);

input[type=checkbox]:not(:disabled) ~ .lever:active:after
	box-shadow: 0 1px 3px 1px rgba(0,0,0,.4), 0 0 0 15px rgba(0, 0, 0, .08);

.switch label input[type=checkbox]:checked + .lever:after
	left: 24px;

// Disabled Styles
.switch input[type=checkbox][disabled] + .lever
	cursor: default;

.switch label input[type=checkbox][disabled] + .lever:after
.switch label input[type=checkbox][disabled]:checked + .lever:after
	background-color: primary-color;