// Scroll
::-webkit-scrollbar
	border-radius 0px
	height 7px
	width 7px
::-webkit-scrollbar-track
	border-radius 0
::-webkit-scrollbar-track-piece
	background-color transparent
::-webkit-scrollbar-thumb
	background dark-color
	&:window-inactive
		background dark-color
::-webkit-scrollbar-corner
	background-color transparent

// Logo Grob
#logoGrob
	bottom 15px
	display inline-block
	height 46px
	overflow hidden
	position absolute
	right 20px
	vertical-align middle
	width 100px
	&:hover
		#aro
			left 51px
			transition all 0.5s ease-in-out 0s
		#des
			left -24px
			transition all 0.5s ease-in-out 0.1s
		#grob
			left -24px
			transition all 0.5s ease-in-out 0.2s
		#sis
			left -24px
			transition all 0.5s ease-in-out 0.3s
#aro
#des
#grob
#sis
	height auto
	left 0px
	position absolute
	top 0
	transition all 0.5s ease-in-out 0s
	width 100px

// General
::selection
	background primary-color
	color #fff

:focus
	outline 0px none

*
	margin 0
	padding 0

html
	height 100%

body
	min-height 100vh
	font-family 'Source Sans Pro', sans-serif
	display flex
	flex-direction column
	color dark-color
	font-size 18px

a
	color inherit
	text-decoration none
	img
		border none

// Texto
h1
	font-size 40px
	text-transform uppercase
	color dark-color

h2
	font-size 30px
	color primary-color
	margin 0 0 1rem

h3
	margin 0 0 1rem

p
	margin 0 0 1.5rem

table.table
	width 100%
	border-collapse collapse
	thead
		border-bottom 1px solid grey
		tr
			th
				padding 1rem
				text-transform uppercase
				text-align left
				font-size 14px
	tbody
		tr
			td
				padding 1rem
				font-size 14px
				color grey-2
				.material-icons
					color dark-color
					transition .3s
					&:hover
						transform scale(1.1)
				&.actions
					vertical-align center
					text-align right
					position relative
					.dropdown-content
						min-width 200px
						left inherit !important
						right 0

.no-margin
	margin 0

.no-padding
	padding 0

.right-align
	text-align right

.lean-overlay
	position fixed
	top 0
	left 0
	right 0
	bottom 0
	background black

.w-auto
	width auto

.pagination
	li
		&.active
			background-color primary-color
			color light-color